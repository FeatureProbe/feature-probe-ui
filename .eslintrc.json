{
	"env":{
    "browser":true,
    "es2021":true
	},
	"extends":[
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
	],
	"parser":"@typescript-eslint/parser",
	"parserOptions":{
    "ecmaVersion":"latest",
    "sourceType":"module"
	},
	"plugins":[
    "@typescript-eslint",
    "check-file",
    "import"
	],
	"rules":{
    // ESM imports need extensions, but TS doesn't re-write them.
    // this forces us to add `.js` to all imports, which makes sure our ESM modules work.
    "import/extensions": [
      "warn",
      "ignorePackages",
      {
        "ts": "always",
        "tsx": "always"
      }
    ],
    "linebreak-style":[
      "warn",
      "unix"
    ],
    "quotes":[
      "error",
      "single"
    ],
    "semi":[
      "error",
      "always"
    ],
    "check-file/filename-naming-convention":[
      "warn",
        {
          "**/*.{js,ts}":"KEBAB_CASE"
        },
        {
          "ignoreMiddleExtensions": true
        }
    ],
    "@typescript-eslint/ban-ts-ignore": "off"
  }
}
